/* Include standard libraries */
#include <cmath>

/* Non-standard third-party libraries */

/* Non-standard third-party libraries */

/* Include user-defined header files */
#include "atomic_lim/equilibrium/zero_temperature/filling_number.h"



// Calculate the filling number in the atomic limit at zero temperature.
namespace NSA1 = std_bhm::atomic_lim::equilibrium::zero_temperature;

int NSA1::filling_number(double mu)
{
    return (mu < 0) ? 0 : std::ceil(mu);
}

/* Include standard libraries */
#include <string>
#include <climits>
#include <unistd.h>
#include <stdexcept>

/* Non-standard third-party libraries */

/* Include user-defined header files */
#include "os/get_abs_path_of_exe.h"


namespace std_bhm
{
namespace os
{

// Return absolute path of current program/executable.
std::string get_abs_path_of_exe()
{
    try
    {
	char buff[PATH_MAX];
	ssize_t len = ::readlink("/proc/self/exe", buff, sizeof(buff)-1);
	std::string abs_path(buff);

	if(len == -1)
	{
	    std::string message =
		"Error occurred in a call to function "
		"'std_bhm::os::get_abs_path_of_exe(...)': "
		"an error occured upon calling the "
		"'::readlink' function.\n\n";
	    throw std::runtime_error(message);
	}

	return abs_path;
    }
    catch(std::runtime_error &ex) { throw; }

} // end of get_abs_path_of_exe(...) definition

} // end of os namespace
} // end of std_bhm namespace
